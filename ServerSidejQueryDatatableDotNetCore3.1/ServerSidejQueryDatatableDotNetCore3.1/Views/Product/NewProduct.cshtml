@model Product;
@{
    ViewData["Title"] = "Product List";
}



@using (Html.BeginForm())
{
    <div style="width:800px; margin:0px auto;">
        <div class="form-group text-center">
            @{
                if (Model.Id == 0)
                {
                    <div class="alert alert-success">
                        <label style="margin:0px auto">New Product</label>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <label style="margin:0px auto">Update Product</label>
                    </div>
                }
            }

        </div>
        <div class="form-group">
            <label class="control-label" for="productName">Product Name:</label>
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", id = "productName", placeholder = "Product Name", autocomplete = "off" })
        </div>
        <div class="form-group">
            <label class="control-label" for="productBrand">Product Brand:</label>
            @Html.TextBoxFor(model => model.Brand, new { @class = "form-control", id = "productName", placeholder = "Product Brand", autocomplete = "off" })
        </div>
        <div class="form-group">
            <label class="control-label" for="productModel">Product Model:</label>
            @Html.TextBoxFor(model => model.Model, new { @class = "form-control", id = "productName", placeholder = "Product Model", autocomplete = "off" })
        </div>
        <div class="form-group">
            <label class="control-label" for="productSize">Product Size:</label>
            @Html.TextBoxFor(model => model.Size, new { @class = "form-control", id = "productName", placeholder = "Product Size", autocomplete = "off" })
        </div>
        <div class="form-group">
            <label class="control-label" for="productPrice">Product Price:</label>
            @Html.TextBoxFor(model => model.Price, new { @class = "form-control", id = "productName", placeholder = "Product Price", autocomplete = "off" })
        </div>
        <div class="form-group text-center">
            @Html.HiddenFor(model => model.Id)
            <a type="button" class="btn btn-info" href="@Url.Action("Index","Product")">Back To List</a>
            &nbsp;
            @{
                if (Model.Id == 0)
                {
                    <button type="submit" class="btn btn-primary">Submit</button>
                }
                else
                {
                    <button type="submit" class="btn btn-info">Update</button>
                }
            }

        </div>
    </div>
}
