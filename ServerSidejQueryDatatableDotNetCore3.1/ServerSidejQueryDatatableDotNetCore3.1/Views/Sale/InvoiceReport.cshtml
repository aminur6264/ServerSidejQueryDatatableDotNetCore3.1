@model ServerSidejQueryDatatableDotNetCore3._1.ViewModels.ReportViewModel

@{
    ViewData["Title"] = "Sales List";
    Layout = "~/Views/Shared/_BlankLayout.cshtml";
}


<div class="row">
    <h2>Company Name</h2>
</div>
<br />
<div class="row">
    <div class="col-xs-6">
        <h3>Aminur Rahman</h3>
        <p>Nilphamari Sadar,
        <br />
        aminur6264@gmail.com</p>
    </div>
    
</div>
<br />
<div class="col-xs-6 text-right">
    Invoice # @Model.InvoiceNo
</div>
<div class="row">
    <table id="tblSalesList" class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>Sl</th>
                <th>Name</th>
                <th>Brand</th>
                <th>Model</th>
                <th>Size</th>
                <th>Discount</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @{ 
                int count = 1;
                foreach (var item in Model.InvoiceDetails)
                {
                    <tr>
                        <td>@count</td>
                        <td>@item.Name</td>
                        <td>@item.Brand</td>
                        <td>@item.Model</td>
                        <td>@item.Size</td>
                        <td>@item.Discount</td>
                        <td>@item.SalePrice</td>
                    </tr>
                    count++;
                }
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="5">Total </th>
                <th>@Model.TotalDiscount</th>
                <th>@Model.TotalPrice</th>
            </tr>
        </tfoot>
    </table>
</div>

